# Server Environment Variables
# Copy this to server/.env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development
REQUEST_TIMEOUT=30000

# Database Configuration
# Get this from Supabase: Settings > Database > Connection String (URI mode)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST]:6543/postgres?pgbouncer=true&connection_limit=1"

# Supabase Configuration
# Get these from Supabase: Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration
# Generate a secure random string (minimum 32 characters)
JWT_SECRET=your-secure-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d

# Gemini AI Configuration
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
